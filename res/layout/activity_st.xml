<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ST">

	<TableLayout
		android:id="@+id/tableLayout1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true">

		<TableRow
			android:id="@+id/tableRow1"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_weight="1">

			<TextView
				android:id="@+id/textView1"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:hint="IP"
				android:text="IP"/>

			<EditText
				android:id="@+id/etIp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:hint="IP"
				android:text="192.168.1.4"
				android:inputType="numberDecimal"
				android:digits="0123456789.">

				<requestFocus/>

			</EditText>

		</TableRow>

		<TableRow
			android:id="@+id/tableRow2"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_weight="1">

			<TextView
				android:id="@+id/textView2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Server port"/>

			<EditText
				android:id="@+id/etSocket"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ems="10"
				android:hint="Server port"
				android:text="6666"
				android:inputType="numberDecimal"
				android:digits="0123456789"/>

		</TableRow>

		<TableRow
			android:id="@+id/tableRow5"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_weight="1">

			<TextView
				android:id="@+id/textView2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Client port"/>

			<EditText
				android:id="@+id/etPort"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ems="10"
				android:hint="Client port"
				android:text="4444"
				android:inputType="numberDecimal"
				android:digits="0123456789"/>

			<EditText
				android:id="@+id/etKeyboard"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ems="10"
				android:inputType="textNoSuggestions|textMultiLine">

				<requestFocus/>

			</EditText>

		</TableRow>

		<TableRow
			android:id="@+id/tableRow3"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_weight="1">

			<TextView
				android:id="@+id/textView3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="A"/>

			<EditText
				android:id="@+id/etA"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ems="10"
				android:hint="A"
				android:text="1"
				android:inputType="numberDecimal"
				android:digits="0123456789-"/>

		</TableRow>

		<TableRow
			android:id="@+id/tableRow4"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_weight="1">

			<TextView
				android:id="@+id/textView4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="B"/>

			<EditText
				android:id="@+id/etB"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ems="10"
				android:hint="B"
				android:text="2"
				android:inputType="numberDecimal"
				android:digits="0123456789-"/>

		</TableRow>

	</TableLayout>

	<LinearLayout
		android:id="@+id/linearLayout1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_below="@+id/tableLayout1">

		<Button
			android:id="@+id/bSend"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="Send"/>

		<Button
			android:id="@+id/bScan"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="Scan"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/ll"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignLeft="@+id/tableLayout1"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:background="#747474"
		android:orientation="vertical">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_above="@id/ll"
			android:id="@+id/tv"
			android:textColor="#FFFFFF"
			android:visibility="gone"/>

		<LinearLayout
		   android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="0.5">
			
		    <Button
			    android:id="@+id/buttonB1"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="1"
			    android:text="B1"
			    android:textColor="#FFFFFF"
			    android:visibility="visible" />

			<Button
			    android:id="@+id/buttonEsc"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="1"
			    android:text="Esc"
			    android:textColor="#FFFFFF"
			    android:visibility="gone" />
			
			<Button
			    android:id="@+id/buttonB2"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="1"
			    android:text="B2"
			    android:textColor="#FFFFFF"
			    android:visibility="visible" />

		</LinearLayout>

		<ImageButton
			android:id="@+id/buttonUp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="3"
			android:text="↑"
			android:visibility="gone"
			android:src="@drawable/navigation_collapse"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="8"
			android:orientation="horizontal">

			<ImageButton
				android:id="@+id/buttonLeft"
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:text="←"
				android:visibility="gone"
				android:src="@drawable/navigation_previous_item"/>

			<ImageButton
				android:id="@+id/buttonRight"
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:text="→"
				android:visibility="gone"
				android:src="@drawable/navigation_next_item"/>

		</LinearLayout>

		<ImageButton
			android:id="@+id/buttonDown"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="3"
			android:text="↓"
			android:visibility="gone"
			android:src="@drawable/navigation_expand"/>

		
		<LinearLayout
		   android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="0.5">
			
		    <Button
				android:id="@+id/buttonB3"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text="B3"
				android:visibility="visible"
				android:textColor="#FFFFFF"/>
		    
			<Button
				android:id="@+id/buttonEnter"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text="Enter"
				android:visibility="gone"
				android:textColor="#FFFFFF"/>
			<Button
				android:id="@+id/buttonB4"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text="B4"
				android:visibility="visible"
				android:textColor="#FFFFFF"/>
			</LinearLayout>

	</LinearLayout>

</RelativeLayout>

