<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<EditText
    android:id="@+id/fn_custom_command_et"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Command to PC" />
    
    <Button
        android:id="@+id/fnCommandLineBtnOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:text="That&apos;s what i need!" />
    
    <EditText
        android:id="@+id/fnCommandLineEtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fnCommandLineBtnOk"
        android:hint="Name of button" />
    
      <TextView
        android:id="@id/android:empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Nope" />
    
    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_above="@id/fnCommandLineEtName"
        android:layout_below="@id/fn_custom_command_et">
    </ListView>

  

    

</RelativeLayout>